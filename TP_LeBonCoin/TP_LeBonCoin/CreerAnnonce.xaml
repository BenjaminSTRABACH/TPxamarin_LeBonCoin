<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP_LeBonCoin.CreerAnnonce">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Settings">
                <TableRoot>
                    <TableSection>
                        <!--Champ pour entrer le Titre-->
                        <EntryCell x:Name="Titre" Placeholder="Titre"/>
                        <!--Champ pour entrer la description-->
                        <EntryCell x:Name="Description" Placeholder="Description"/>
                        <!--Champ pour entrer le prix-->
                        <EntryCell x:Name="Prix" Placeholder="Prix en euros" Keyboard="Numeric"/>
                        <!--Champ pour entrer le numéro de téléphone-->
                        <EntryCell x:Name="Telephone" Placeholder="Numéro de téléphone" Keyboard="Numeric"/>
                        <!--Champ pour entrer la catégorie-->
                        <EntryCell x:Name="Categorie" Placeholder="Catégorie" />
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button Clicked="ButtonCreerAnnonce" Text="Confirmer"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
