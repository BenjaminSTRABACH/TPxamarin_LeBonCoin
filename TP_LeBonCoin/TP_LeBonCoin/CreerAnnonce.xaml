<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP_LeBonCoin.CreerAnnonce">
    <ContentPage.Content>
        <StackLayout>
			
			<!--Champ pour entrer le titre-->
			<Entry x:Name="titre" Placeholder="Titre"/>
			<!--Champ pour entrer la description-->
			<Entry x:Name="desc" Placeholder="Description" Keyboard="Text"/>
			<!--Champ pour entrer le prix-->
			<Entry x:Name="prix" Placeholder="Prix" Keyboard="Numeric"/>
			<!--Champ pour entrer le numéro de téléphone-->
			<Entry x:Name="tel" Placeholder="Tel" Keyboard="Telephone"/>
			<!--Champ pour entrer la catégorie-->
			<Picker x:Name="cat" Title="Catégorie" ItemDisplayBinding="{Binding Titre}"/>
			<Button Clicked="ButtonCreerAnnonce" Text="Créer l'annonce"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>