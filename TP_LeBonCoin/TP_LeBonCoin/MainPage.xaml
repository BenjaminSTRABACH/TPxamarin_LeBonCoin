<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TP_LeBonCoin"
             x:Class="TP_LeBonCoin.MainPage">

	<StackLayout>
		<!-- Place new controls here -->
		<TableView Intent="Settings">
			<TableRoot>
				<TableSection Title="Connexion">
					<EntryCell x:Name="login" Placeholder="Identifiant" Completed="login_Completed"/>
					<!--Champ pour entrer le login-->
					<EntryCell x:Name="mdp" Placeholder="Code PIN (6 Chiffres)" Completed="mdp_Completed" Keyboard="Numeric"/>
					<!--Champ pour entrer le mot de passe-->
				</TableSection>
			</TableRoot>
		</TableView>
		<Button Clicked="ButtonConnexion" Text="Connexion"/>
		<Button Clicked="ButtonInscription" Text="Inscription"/>
	</StackLayout>

</ContentPage>
